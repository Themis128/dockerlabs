{
  "name": "dockerlabs",
  "version": "1.0.0",
  "description": "Raspberry Pi management project with Playwright tests",
  "scripts": {
    "test": "playwright test",
    "test:wpa": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/run-tests.ps1",
    "test:wpa:ui": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/run-tests.ps1 --ui",
    "test:wpa:headed": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/run-tests.ps1 --headed",
    "test:wpa:debug": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/run-tests.ps1 --debug",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:gui": "playwright test tests/layout.spec.ts tests/components.spec.ts tests/ui.spec.ts",
    "test:nuxt": "playwright test tests/layout.spec.ts tests/components.spec.ts tests/routing.spec.ts tests/ui.spec.ts",
    "test:components": "playwright test tests/components.spec.ts",
    "test:layout": "playwright test tests/layout.spec.ts",
    "test:api": "playwright test tests/api-integration.spec.ts",
    "test:api:endpoints": "playwright test tests/api-endpoints.spec.ts",
    "test:routing": "playwright test tests/routing.spec.ts",
    "start:server": "python web-gui/server.py",
    "start:web": "python web-gui/server.py",
    "start:python": "python -u web-gui/server.py",
    "start:nuxt": "nuxt dev --port 3001",
    "dev": "nuxt dev",
    "dev:all": "concurrently -n \"PYTHON,NUXT\" -c \"blue,green\" --kill-others-on-fail \"npm run start:python\" \"npm run start:nuxt:wait\"",
    "start:nuxt:wait": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/wait-for-python.ps1",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "cd:project": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/cd-project.ps1",
    "cd:maui": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/cd-maui.ps1",
    "maui:dev": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/run-maui-dev.ps1",
    "maui:build": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/build-maui.ps1",
    "web:start": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/start-web-gui.ps1",
    "format": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/format-with-prettier.ps1",
    "format:check": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/format-with-prettier.ps1 -Check",
    "format:js": "prettier --write \"**/*.{js,ts}\" --ignore-path .prettierignore",
    "format:html": "prettier --write \"**/*.html\" --ignore-path .prettierignore",
    "format:css": "prettier --write \"**/*.css\" --ignore-path .prettierignore",
    "format:json": "prettier --write \"**/*.json\" --ignore-path .prettierignore",
    "ts:check": "vue-tsc --noEmit",
    "ts:fix": "npm run format:js && npm run ts:check",
    "typecheck": "vue-tsc --noEmit",
    "lint": "npm run ts:check && npm run lint:html && npm run format:check",
    "lint:fix": "npm run format:js && npm run format:html && npm run format:css && npm run ts:check && npm run lint:html",
    "lint:html": "htmlhint web-gui/public/**/*.html",
    "lint:html:json": "htmlhint web-gui/public/**/*.html --format json",
    "lint:html:compact": "htmlhint web-gui/public/**/*.html --format compact",
    "lint:html:validate": "html-validate web-gui/public/**/*.html",
    "review": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/run-review.ps1",
    "review:quick": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/run-review.ps1 -quick",
    "analyze:ollama": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/analyze-code-with-ollama.ps1",
    "analyze:ollama:quick": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/analyze-code-with-ollama.ps1 -Quick",
    "analyze:ollama:detailed": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/analyze-code-with-ollama.ps1 -Detailed",
    "analyze:ollama:verbose": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/analyze-code-with-ollama.ps1 -Verbose",
    "analyze:codebase": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/review-codebase-with-ollama.ps1",
    "analyze:quick": "powershell -ExecutionPolicy Bypass -File ./scripts/powershell/review-codebase-with-ollama.ps1 -Quick -MaxFiles 5",
    "prepare": "husky"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.11.3",
    "nuxt": "^4.0.0",
    "pinia": "^3.0.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.0",
    "concurrently": "^9.1.2",
    "html-validate": "^10.3.1",
    "htmlhint": "^1.7.1",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.1.3",
    "wait-on": "^8.0.5"
  }
}
